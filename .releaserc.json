{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "scope": "BREAKING", "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ðŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "docs", "section": "ðŸ“ Documentation" },
            { "type": "style", "section": "ðŸ’„ Styling" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ðŸ“¦ Build System" },
            { "type": "ci", "section": "ðŸ‘· CI/CD" },
            { "type": "chore", "section": "ðŸ”§ Maintenance" },
            { "type": "security", "section": "ðŸ”’ Security" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [standard-version](https://github.com/conventional-changelog/standard-version) for commit guidelines."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cp README.npm.md README.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "git checkout README.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "CHANGELOG.md",
            "label": "Changelog"
          }
        ],
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on:\n- [GitHub release](${releases.filter(release => /^@.*/gm.test(release.name) === false)[0].url})\n\nYour **${issue.pull_request ? 'pull request' : 'issue'}** is in this release :rocket:",
        "failTitle": "ðŸš¨ The automated release is failing",
        "failComment": "This release from branch `${branch.name}` had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}\n\nSemantic-release will retry on the next push.",
        "labels": false,
        "releasedLabels": [
          "released<%= nextRelease.channel ? ` on @\\${nextRelease.channel}` : '' %> :rocket:"
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
